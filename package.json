{
  "name": "electron-wp-template",
  "version": "1.0.2",
  "description": "Electron template",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev:renderer": "webpack-dev-server",
    "dev:main": "nodemon -w main.js -x \"npm start\"",
    "dev": "cross-env PORT=5555 NODE_ENV=development concurrently \"npm:dev:*\"",
    "build:renderer": "webpack",
    "build:main": "electron-builder",
    "preview": "cross-env NODE_ENV=production npm run build:renderer && npm run start",
    "build": "cross-env NODE_ENV=production npm run build:renderer && npm run build:main",
    "clean": "rimraf dist renderer"
  },
  "build": {
    "appId": "com.export.app",
    "files": [
      "renderer/**/*",
      "node_modules/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null,
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "portable"
    }
  },
  "keywords": [],
  "author": "1",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "html-webpack-plugin": "^4.3.0",
    "nodemon": "^2.0.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "rimraf": "^3.0.2"
  }
}
